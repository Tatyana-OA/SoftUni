
        <section id="viewhotelDetails">
            <h2>Details</h2>
            <div class="hotel-ticket">
                <div class="hotel-left">
                    <img src="{{hotel.imageUrl}}"
                        alt="">
                </div>
                <div class="hotel-right">
                    <div>
                        <h3>{{hote.name}}</h3>
                    </div>
                    <div>
                        {{hotel.city}}
                    </div>
                    <p><span >Free rooms: {{hotel.rooms}}</span> </p>
                    {{#if hotel.hasUser}}
                    {{#if hotel.isAuthor}}
                    <a href="/hotels/edit/{{hotel._id}}" class="edit">Edit</a>
                    <a href="/hotels/delete/{{hotel._id}}" class="remove">Delete</a>
                    {{else}}
                    {{#if hotel.isBooked}}
                    <p><span class="green">You already have booked a room</span> </p>
                     {{else}}
                     <a href="/hotels/book/{{hotel._id}}" class="book">Book</a>
                    {{/if}}
                      {{/if}} 
                      {{/if}}
                     
                     {{! Author sees delete + edit, cannot book}}
                     {{! User can book, cannot edit/delete}}
                     {{! User can't book, if already booked or author}}
                </div>

            </div>
        </section>
